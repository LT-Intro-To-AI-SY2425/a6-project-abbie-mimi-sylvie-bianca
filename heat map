import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import StandardScaler
from sklearn.linear_model import LinearRegression
from sklearn.metrics import mean_squared_error

df = pd.read_csv("real_footy_data.csv")

def plot_correlations(df):
    # Correlation Matrix Heatmap
    plt.figure(figsize=(10, 8))
    sns.heatmap(df.corr(), annot=True, cmap='coolwarm', fmt='.2f', linewidths=0.5)
    plt.title('Correlation Matrix')
    plt.show()

    # Pairplot for key variables to visualize scatter plots
    sns.pairplot(df, diag_kind='kde', hue=None, plot_kws={'alpha': 0.7})
    plt.suptitle('Pairplot of Key Features', y=1.02)
    plt.show()

    # Scatter plots between specific features vs target (e.g., Goals scored)
    key_features = ['GP', 'GS', 'MIN', 'ASST', 'SHOTS', 'SOG']
    for feature in key_features:
        plt.figure(figsize=(6, 4))
        plt.scatter(df[feature], df['G'], alpha=0.5)
        plt.title(f'{feature} vs Goals Scored')
        plt.xlabel(feature)
        plt.ylabel('Goals Scored')
        plt.show()

# Example usage:
# Assuming df is your DataFrame with the dataset
plot_correlations(df)